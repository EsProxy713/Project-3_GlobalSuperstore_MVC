@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 style="color:#00bc8c !important ">Welcome to Global Superstores</h1>
    <p class="lead">
        This MVC webapp provides visualisations and insights into the Global Superstore dataset.
    </p>
    @if (User.Identity.IsAuthenticated)
    { }
    else
    {
        <p class="lead">
            To gain access to the data managers and data visualizations, please register/login.
        </p>
    }
    <p align="center">
        @if (User.Identity.IsAuthenticated)
        { }
        else
        {
            <a href="@Url.Action("Login", null, new { area = string.Empty, controller = "Account" }, Request.Url.Scheme)" class="btn btn-success btn-lg">Login here &raquo;</a>
            <a href="@Url.Action("Register", null, new { area = string.Empty, controller = "Account" }, Request.Url.Scheme)" class="btn btn-success btn-lg">Register here &raquo;</a>
        }
    </p>

</div>
@if (User.Identity.IsAuthenticated)
{
<h2 style="color:#3498db">Current tools available:</h2>
<div class="row">
    <div class="col-md-3">
        <h3>Visualisation</h3>
        <p>This is the visualization function of this system.</p>
        <p>Under this option, a user can access and view different charts generated based on data in the database.</p>
        <p>This will help to provide insight and analysis into the Global Superstore business.</p>
        <p>Each option has a combination of charts unique to that section of analysis.</p>

        <li class="dropdown" >
            <a class="dropdown-toggle" data-toggle="dropdown"
               asp-area="" asp-controller="Staffs" asp-action="Index" style="color:#3498db">
                Visualisation
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Trends over time", "Trends", "Visuals")</li>
                <li>@Html.ActionLink("Relationships between area and purchases", "Relationships", "Visuals")</li>
                <li>@Html.ActionLink("Location Insights", "LocationInsights", "Visuals")</li>
                <li>@Html.ActionLink("Products Purchased History", "ProductPurchases", "Visuals")</li>
                <li>@Html.ActionLink("Information on Regional Managers", "RegionalManagers", "Visuals")</li>
                <li>@Html.ActionLink("Information on Order History", "Orders", "Visuals")</li>
                <li>@Html.ActionLink("Information on Return History", "Returns", "Visuals")</li>
            </ul>
        </li>

    </div>
    <div class="col-md-3">
        <h3>Manage Orders</h3>
        <p>Row Level Access:</p>
        <p>• Under this option, users will be able to view and edit the current information available from the Orders dataset.</p>
        <p>• There is also capability to add new entries into the Orders dataset.</p>
        <p><a class="btn btn-info btn-sm" href="@Url.Action("Index", null, new { area = string.Empty, controller = "Orders" }, Request.Url.Scheme)">Go there &raquo;</a></p>
    </div>
    <div class="col-md-3">
        <h3>Manage Returns</h3>
        <p>Row Level Access:</p>
        <p>• Under this option, users will be able to view the current information available from the Returns dataset.</p>
        <p>• There is also capability to add new entries into the Returns dataset.</p>
        
            <p><a class="btn btn-info btn-sm" href="@Url.Action("Index", null, new { area = string.Empty, controller = "Returns" }, Request.Url.Scheme)">Go there &raquo;</a></p>
        
    </div>
    <div class="col-md-3">
        <h3>Manage Regional Managers</h3>
        <p>Row Level Access:</p>
        <p>• Under this option, users will be able to view and edit the current information available from the Regional Managers dataset.</p>
        <p>• There is also capability to add new entries into the Regional Managers dataset.</p>
        
            <p><a class="btn btn-info btn-sm" href="@Url.Action("Index", null, new { area = string.Empty, controller = "People" }, Request.Url.Scheme)">Go there &raquo;</a></p>
        
    </div>

</div>
}
else
{ }