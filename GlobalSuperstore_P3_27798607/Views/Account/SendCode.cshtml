@model GlobalSuperstore_P3_27798607.Models.SendCodeViewModel
@{
    ViewBag.Title = "Verify your login";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>Send verification code</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            Select Two-Factor Authentication Provider:
            <br />
            <br />
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new { @class = "btn btn-default dropdown-toggle" })
            <input type="submit" value="Submit" class="btn btn-success" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
